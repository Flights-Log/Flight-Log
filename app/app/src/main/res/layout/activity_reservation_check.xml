<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <!--    툴바  -->
    <include
            android:id="@+id/tool_bar"
            layout="@layout/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_gradient">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/ticket_rd">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp">

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:textAlignment="viewStart">

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_weight="1"
                                android:textSize="18sp"
                                android:text="예약 번호"
                                android:textStyle="bold" />

                        <EditText
                                android:id="@+id/reservation_number"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_weight="1"
                                android:textSize="18sp"
                                android:hint="예약 번호"
                                android:background="@drawable/eddittext_no_under_line" />
                    </LinearLayout>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_weight="2"
                            android:textSize="18sp"
                            android:text=" "
                            android:textStyle="bold"
                            android:visibility="invisible" />

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingHorizontal="5dp">

                        <EditText
                                android:id="@+id/last_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="성(LastName)"
                                android:textSize="18sp"
                                android:background="@drawable/eddittext_no_under_line"
                                android:layout_gravity="end"
                                android:textAlignment="textEnd" />

                        <EditText
                                android:id="@+id/first_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="18sp"
                                android:hint="이름(FirstName)"
                                android:background="@drawable/eddittext_no_under_line"
                                android:layout_gravity="end"
                                android:textAlignment="textEnd" />
                    </LinearLayout>
                </LinearLayout>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="#868686" />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:layout_weight="2"
                            android:text="출발(Start City)"
                            android:textAlignment="center"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:layout_weight="1"
                            android:text=""
                            android:textAlignment="center"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:visibility="invisible" />

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:layout_weight="2"
                            android:text="도착(Arrival City)"
                            android:textAlignment="center"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                    <EditText
                            android:id="@+id/start_city"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:layout_weight="2"
                            android:hint="출발지"
                            android:textAlignment="center"
                            android:textSize="35sp"
                            android:background="@drawable/eddittext_no_under_line" />

                    <ImageView
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_weight="1"
                            android:src="@drawable/flight_arrow" />

                    <EditText
                            android:id="@+id/arrival_city"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:layout_weight="2"
                            android:hint="도착지"
                            android:textAlignment="center"
                            android:textSize="35sp"
                            android:background="@drawable/eddittext_no_under_line" />
                </LinearLayout>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="#868686" />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginVertical="7dp"
                                android:textSize="18sp"
                                android:text="출발 날짜"
                                android:textStyle="bold" />

                        <EditText
                                android:id="@+id/departure_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginVertical="7dp"
                                android:textSize="18sp"
                                android:hint="yyyy-MM-dd"
                                android:background="@drawable/eddittext_no_under_line" />
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:text="출발 시간"
                                    android:layout_marginVertical="7dp"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                            <EditText
                                    android:id="@+id/departure_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginVertical="7dp"
                                    android:textSize="18sp"
                                    android:hint="hh:mm"
                                    android:background="@drawable/eddittext_no_under_line" />
                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:text="도착 시간"
                                    android:layout_marginVertical="7dp"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                            <EditText
                                    android:id="@+id/arrival_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:hint="hh:mm"
                                    android:layout_marginVertical="7dp"
                                    android:textSize="18sp"
                                    android:background="@drawable/eddittext_no_under_line" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:text="탑승 인원"
                                android:layout_marginVertical="7dp"
                                android:layout_weight="1"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                        <EditText
                                android:id="@+id/passengers"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginVertical="7dp"
                                android:layout_weight="3"
                                android:textSize="18sp"
                                android:hint="1명"
                                android:background="@drawable/eddittext_no_under_line" />
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginVertical="7dp"
                                android:textSize="18sp"
                                android:text="여권 번호"
                                android:textStyle="bold" />

                        <EditText
                                android:id="@+id/passport_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginVertical="7dp"
                                android:textSize="18sp"
                                android:hint="0000000000000"
                                android:background="@drawable/eddittext_no_under_line" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginVertical="7dp"
                                android:textSize="18sp"
                                android:text="좌석 번호"
                                android:textStyle="bold" />

                        <EditText
                                android:id="@+id/seat_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginVertical="7dp"
                                android:textSize="18sp"
                                android:hint="A1"
                                android:background="@drawable/eddittext_no_under_line" />
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginVertical="7dp"
                                android:textSize="18sp"
                                android:text="수하물 "
                                android:textStyle="bold" />

                        <EditText
                                android:id="@+id/luggage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="7dp"
                                android:textSize="18sp"
                                android:hint="최대 40Kg"
                                android:background="@drawable/eddittext_no_under_line" />
                    </LinearLayout>
                </LinearLayout>
                <!--             오는거 -->
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/ticket_rd">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp">

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:textAlignment="viewStart">

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_weight="1"
                                android:textSize="18sp"
                                android:text="예약 번호"
                                android:textStyle="bold" />

                        <EditText
                                android:id="@+id/return_reservation_number"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_weight="1"
                                android:textSize="18sp"
                                android:hint="예약 번호"
                                android:background="@drawable/eddittext_no_under_line" />
                    </LinearLayout>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_weight="2"
                            android:textSize="18sp"
                            android:text=" "
                            android:textStyle="bold"
                            android:visibility="invisible" />

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingHorizontal="5dp">

                        <EditText
                                android:id="@+id/return_last_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="성(LastName)"
                                android:textSize="18sp"
                                android:background="@drawable/eddittext_no_under_line"
                                android:layout_gravity="end"
                                android:textAlignment="textEnd" />

                        <EditText
                                android:id="@+id/return_first_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="18sp"
                                android:hint="이름(FirstName)"
                                android:background="@drawable/eddittext_no_under_line"
                                android:layout_gravity="end"
                                android:textAlignment="textEnd" />
                    </LinearLayout>
                </LinearLayout>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="#868686" />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:text="출발(Start City)"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_weight="2"
                            android:textAlignment="center" />

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:text=""
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:visibility="invisible" />

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:text="도착(Arrival City)"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_weight="2"
                            android:textAlignment="center" />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                    <EditText
                            android:id="@+id/return_start_city"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:hint="출발지"
                            android:textSize="35sp"
                            android:layout_weight="2"
                            android:textAlignment="center"
                            android:background="@drawable/eddittext_no_under_line" />

                    <ImageView
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_marginHorizontal="10dp"
                            android:src="@drawable/flight_arrow"
                            android:layout_weight="1" />

                    <EditText
                            android:id="@+id/return_arrival_city"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:hint="도착지"
                            android:textSize="35sp"
                            android:layout_weight="2"
                            android:textAlignment="center"
                            android:background="@drawable/eddittext_no_under_line" />
                </LinearLayout>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="#868686" />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginVertical="7dp"
                                android:text="출발 날짜"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                        <EditText
                                android:id="@+id/return_departure_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginVertical="7dp"
                                android:hint="yyyy-MM-dd"
                                android:background="@drawable/eddittext_no_under_line" />
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="7dp"
                                    android:text="출발 시간"
                                    android:layout_marginVertical="7dp"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                            <EditText
                                    android:id="@+id/return_departure_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginVertical="7dp"
                                    android:textSize="18sp"
                                    android:hint="hh:mm"
                                    android:background="@drawable/eddittext_no_under_line" />
                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:text="도착 시간"
                                    android:layout_marginVertical="7dp"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                            <EditText
                                    android:id="@+id/return_arrival_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:hint="hh:mm"
                                    android:layout_marginVertical="7dp"
                                    android:textSize="18sp"
                                    android:background="@drawable/eddittext_no_under_line" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:text="탑승 인원"
                                android:layout_marginVertical="7dp"
                                android:layout_weight="1"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                        <EditText
                                android:id="@+id/return_passengers"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="7dp"
                                android:layout_weight="3"
                                android:textSize="18sp"
                                android:hint="1명"
                                android:background="@drawable/eddittext_no_under_line" />
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginVertical="7dp"
                                android:textSize="18sp"
                                android:text="여권 번호"
                                android:textStyle="bold" />

                        <EditText
                                android:id="@+id/return_passport_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginVertical="7dp"
                                android:textSize="18sp"
                                android:hint="0000000000000"
                                android:background="@drawable/eddittext_no_under_line" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginVertical="7dp"
                                android:textSize="18sp"
                                android:text="좌석 번호"
                                android:textStyle="bold" />

                        <EditText
                                android:id="@+id/return_seat_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginVertical="7dp"
                                android:textSize="18sp"
                                android:hint="A1"
                                android:background="@drawable/eddittext_no_under_line" />
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginVertical="7dp"
                                android:textSize="18sp"
                                android:text="수하물 "
                                android:textStyle="bold" />

                        <EditText
                                android:id="@+id/return_luggage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="7dp"
                                android:textSize="18sp"
                                android:hint="최대 40Kg"
                                android:background="@drawable/eddittext_no_under_line" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <Button
                    android:id="@+id/btn_home"
                    android:layout_width="match_parent"
