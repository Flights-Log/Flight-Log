<?xml version="1.0" encoding="utf-8"?>
<!-- 드로어 메뉴 활성화 -->
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".flightmain.MainActivity">


    <!--    사이드 메뉴  -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginTop="72dp"
        app:menu="@menu/drawer_menu">


        <!--    간격두기위한 빈 컨테이너    -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">

            <!-- 로그인 상태 텍스트 -->
            <EditText
                android:id="@+id/login_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="sans-serif-medium"
                android:text="로그인이 필요합니다"
                android:textSize="16dp"
                android:textStyle="bold" />

            <!-- 로그인 아이콘 -->
            <ImageView
                android:id="@+id/action_login"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="80dp"
                android:layout_toEndOf="@id/login_status"
                android:src="@drawable/ic_login" />

            <!-- 알림 아이콘 -->
            <ImageView
                android:id="@+id/action_notifications"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/action_login"
                android:src="@drawable/ic_notifications" />

            <!-- 설정 아이콘 -->
            <ImageView
                android:id="@+id/action_settings"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/action_notifications"
                android:src="@drawable/ic_settings" />
        </RelativeLayout>

    </com.google.android.material.navigation.NavigationView>


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">

        <!--  레이아웃 박스 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            tools:context=".sidebar.PaymentHistoryActivity">


            <!--  툴바-->
            <include
                android:id="@+id/tool_bar"
                layout="@layout/tool_bar2"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginTop="58dp"/>


            <!--        여행자 정보-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingTop="20dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="여행자 정보"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp">

                    <EditText
                        android:id="@+id/my_info_id"
                        android:layout_width="350dp"
                        android:layout_height="50dp"
                        android:background="@drawable/join_member_edit_text"
                        android:text="아이디"
                        android:textAlignment="center"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp">

                    <EditText
                        android:id="@+id/my_info_pw"
                        android:layout_width="350dp"
                        android:layout_height="50dp"
                        android:background="@drawable/join_member_edit_text"
                        android:text="비밀번호"
                        android:textAlignment="center"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">



                    <EditText
                        android:id="@+id/my_info_ko_last_name"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/gender_button_unselected"
                        android:hint="성"
                        android:text="전"
                        android:textAlignment="center">
                    </EditText>


                    <EditText
                        android:id="@+id/my_info_ko_first_name"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="50dp"
                        android:background="@drawable/gender_button_unselected"
                        android:hint="이름"
                        android:text="강산"
                        android:textAlignment="center">
                    </EditText>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp">

                    <EditText
                        android:id="@+id/my_info_last_name"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:background="@drawable/gender_button_unselected"
                        android:text="JEON"
                        android:textAlignment="center"
                        android:layout_marginStart="10dp">
                    </EditText>

                    <EditText
                        android:id="@+id/my_info_first_name"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="50dp"
                        android:text="KANG SAN"
                        android:textAlignment="center"
                        android:background="@drawable/gender_button_unselected" >
                    </EditText>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:layout_marginStart="10dp">

                    <EditText
                        android:id="@+id/my_info_gender"
                        android:layout_width="350dp"
                        android:layout_height="50dp"
                        android:background="@drawable/join_member_edit_text"
                        android:hint="신분증 성별"
                        android:text="남자"
                        android:textAlignment="center"/>

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/my_info_birth_date"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:text="1990-01-01"
                    android:layout_marginTop="20dp"
                    android:focusable="false"
                    android:clickable="true"
                    android:inputType="none"
                    android:textSize="16sp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/join_member_edit_text"
                    android:gravity="center" >
                </androidx.appcompat.widget.AppCompatButton>


                <EditText
                    android:id="@+id/my_info_phone"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:text="010-0000-0000"
                    android:layout_marginTop="20dp"
                    android:textSize="16sp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/join_member_edit_text"
                    android:gravity="center" />


                <EditText
                    android:id="@+id/my_info_email"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:text="test1@test.com"
                    android:layout_marginTop="20dp"
                    android:textSize="16sp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/join_member_edit_text"
                    android:gravity="center" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/update_button"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="30dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="수정">


                </androidx.appcompat.widget.AppCompatButton>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.drawerlayout.widget.DrawerLayout>