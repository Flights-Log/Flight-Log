<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/white">

  <!--  툴바-->
  <include
      android:id="@+id/tool_bar"
      layout="@layout/tool_bar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

<!--  메인 화면-->
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:fillViewport="true"
      android:scrollbars="none"
      tools:ignore="UselessParent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

      <!--  카드뷰-->
      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="15dp"
          app:cardCornerRadius="10dp"
          app:cardElevation="4dp">

        <!--  항공권 예매  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="15dp">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginVertical="10dp"
              android:text="항공권 예매"
              android:textColor="@color/black"
              android:textSize="20sp"
              android:textStyle="bold" />

          <View
              android:layout_width="match_parent"
              android:layout_height="2dp"
              android:layout_marginBottom="10dp"
              android:background="@color/grey" />

          <!--출발지 도착지 거꾸로 하기-->
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginVertical="10dp"
              android:gravity="center_vertical"
              android:orientation="horizontal">

            <TextView
                android:id="@+id/flight_log_departure_icon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="출발"
                android:textColor="@color/mainBlue"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:src="@drawable/spinning_arrow" />

            <TextView
                android:id="@+id/flight_log_destination_icon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="도착"
                android:textColor="@color/mainBlue"
                android:textSize="15sp"
                android:textStyle="bold" />
          </LinearLayout>

          <!-- 출발지 및 도착지-->
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:orientation="horizontal">

            <TextView
                android:id="@+id/flight_log_departure"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="출발지"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/arrow" />

            <TextView
                android:id="@+id/flight_log_destination"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="도착지"
                android:textSize="20sp"
                android:textStyle="bold" />
          </LinearLayout>

          <!-- 일자, 인원수 선택 뷰-->
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginVertical="10dp"
              android:gravity="center_horizontal"
              android:orientation="vertical">

            <!--가는 날-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

              <TextView
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="가는날"
                  android:textAlignment="center"
                  android:textColor="@color/mainBlue"
                  android:textSize="20sp"
                  android:textStyle="bold" />

              <TextView
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="지정 안함"
                  android:textAlignment="center"
                  android:textColor="@color/black"
                  android:textSize="20sp"
                  android:textStyle="bold" />

              <ImageView
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:contentDescription="right_arrow"
                  android:src="@drawable/right_arrow" />
            </LinearLayout>

            <!--오는 날-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

              <TextView
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="오는날"
                  android:textAlignment="center"
                  android:textColor="@color/mainBlue"
                  android:textSize="20sp"
                  android:textStyle="bold" />

              <TextView
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="지정 안함"
                  android:textAlignment="center"
                  android:textColor="@color/black"
                  android:textSize="20sp"
                  android:textStyle="bold" />

              <ImageView
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:contentDescription="right_arrow"
                  android:src="@drawable/right_arrow" />
            </LinearLayout>

            <!--인원 수-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

              <TextView
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="인원 선택"
                  android:textAlignment="center"
                  android:textColor="@color/mainBlue"
                  android:textSize="20sp"
                  android:textStyle="bold" />

              <TextView
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="총 1 명"
                  android:textAlignment="center"
                  android:textColor="@color/black"
                  android:textSize="20sp"
                  android:textStyle="bold" />

              <ImageView
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:contentDescription="right_arrow"
                  android:src="@drawable/right_arrow" />
            </LinearLayout>

            <!--조회하기 버튼-->
            <Button
                android:id="@+id/flight_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="조회하기"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

          </LinearLayout>

        </LinearLayout>

      </androidx.cardview.widget.CardView>

      <View
          android:layout_width="match_parent"
          android:layout_height="2dp"
          android:layout_marginHorizontal="15dp"
          android:layout_marginBottom="15dp"
          android:background="@color/grey" />

      <!--  광고 이미지-->
      <ImageView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="15dp"
          android:src="@drawable/advertisement1" />

      <View
          android:layout_width="match_parent"
          android:layout_height="2dp"
          android:layout_marginHorizontal="15dp"
          android:layout_marginVertical="10dp"
          android:background="@color/grey" />

      <!--  팀 이름-->
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="10dp"
          android:gravity="center_horizontal"
          android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Made By 하늘일기"
            android:textColor="@color/grey"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="권동훈, 박경민, 심지현, 이동윤, 이의진, 전강산"
            android:textColor="@color/grey" />
      </LinearLayout>
    </LinearLayout>
  </ScrollView>
</LinearLayout>