<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center_horizontal"
      android:orientation="vertical">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:context=".flightmain.MainActivity"
        tools:ignore="UselessParent">

      <androidx.appcompat.widget.Toolbar
          android:id="@+id/toolbar"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/mainBlue"
          android:elevation="4dp"
          android:theme="@style/ToolbarTitleStyle"
          app:titleTextColor="@color/white">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/flight_log_logo" />
      </androidx.appcompat.widget.Toolbar>

      <!--  메인 화면-->
      <ScrollView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:fillViewport="true"
          android:scrollbars="none"
          tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

          <!--  카드뷰-->
          <androidx.cardview.widget.CardView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="15dp"
              app:cardCornerRadius="10dp"
              app:cardElevation="4dp">

            <!--  항공권 예매  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="15dp">

              <!--편도 왕복 고르게-->
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center_vertical"
                  android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:layout_weight="3"
                    android:text="항공권 예매"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/round_trip_checkbox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="왕복"
                    android:textAlignment="center" />
              </LinearLayout>


              <View
                  android:layout_width="match_parent"
                  android:layout_height="2dp"
                  android:layout_marginBottom="10dp"
                  android:background="@color/grey" />

              <!--출발지 도착지 거꾸로 하기-->
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginVertical="10dp"
                  android:gravity="center_vertical"
                  android:orientation="horizontal">

                <TextView
                    android:id="@+id/flight_log_departure_icon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="출발"
                    android:textColor="@color/mainBlue"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/change_destination_arrive_arrow"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:contentDescription="spinning_arrow"
                    android:src="@drawable/spinning_arrow" />

                <TextView
                    android:id="@+id/flight_log_arrive_icon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="도착"
                    android:textColor="@color/mainBlue"
                    android:textSize="15sp"
                    android:textStyle="bold" />
              </LinearLayout>

              <!-- 출발지 및 도착지-->
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center_vertical"
                  android:orientation="horizontal">

                <TextView
                    android:id="@+id/departure_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="출발지"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/main_round_trip_arrow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:contentDescription="round_trip_arrow"
                    android:src="@drawable/round_trip_arrow"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/main_one_way_trip_arrow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:contentDescription="one_way_trip_arrow"
                    android:src="@drawable/right_arrow_black"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/arrive_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="도착지"
                    android:textSize="30sp"
                    android:textStyle="bold" />
              </LinearLayout>

              <!-- 일자, 인원수 선택 뷰-->
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginVertical="10dp"
                  android:gravity="center_horizontal"
                  android:orientation="vertical">

                <!--가는 날-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                  <TextView
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:text="가는날"
                      android:textAlignment="center"
                      android:textColor="@color/mainBlue"
                      android:textSize="20sp"
                      android:textStyle="bold" />

                  <TextView
                      android:id="@+id/choose_go_date_text"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="2"
                      android:paddingVertical="10dp"
                      android:text="지정 안함"
                      android:textAlignment="center"
                      android:textColor="@color/black"
                      android:textSize="20sp"
                      android:textStyle="bold" />
                </LinearLayout>

                <!--오는 날-->
                <LinearLayout
                    android:id="@+id/come_date_choose_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone">

                  <TextView
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:text="오는날"
                      android:textAlignment="center"
                      android:textColor="@color/mainBlue"
                      android:textSize="20sp"
                      android:textStyle="bold" />

                  <TextView
                      android:id="@+id/choose_come_date_text"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="2"
                      android:paddingVertical="10dp"
                      android:text="지정 안함"
                      android:textAlignment="center"
                      android:textColor="@color/black"
                      android:textSize="20sp"
                      android:textStyle="bold" />
                </LinearLayout>

                <!--인원 수-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                  <TextView
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:text="인원 선택"
                      android:textAlignment="center"
                      android:textColor="@color/mainBlue"
                      android:textSize="20sp"
                      android:textStyle="bold" />

                  <TextView
                      android:id="@+id/choose_people_text"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="2"
                      android:paddingVertical="10dp"
                      android:text="총 1 명"
                      android:textAlignment="center"
                      android:textColor="@color/black"
                      android:textSize="20sp"
                      android:textStyle="bold" />
                </LinearLayout>

                <!--조회하기 버튼-->
                <Button
                    android:id="@+id/flight_search"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="조회하기"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

              </LinearLayout>

            </LinearLayout>

          </androidx.cardview.widget.CardView>

          <View
              android:layout_width="match_parent"
              android:layout_height="2dp"
              android:layout_marginHorizontal="15dp"
              android:layout_marginBottom="15dp"
              android:background="@color/grey" />

          <!--캐러셀 용 뷰페이저-->
          <androidx.viewpager2.widget.ViewPager2
              android:id="@+id/viewPager"
              android:layout_width="match_parent"
              android:layout_height="200dp"
              android:clipChildren="false"
              android:clipToPadding="false"
              android:overScrollMode="never"
              android:paddingStart="40dp"
              android:paddingEnd="40dp" />

          <View
              android:layout_width="match_parent"
              android:layout_height="2dp"
              android:layout_marginHorizontal="15dp"
              android:layout_marginVertical="10dp"
              android:background="@color/grey" />

          <!--  팀 이름-->
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="10dp"
              android:gravity="center_horizontal"
              android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Made By 하늘일기"
                android:textColor="@color/grey"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="권동훈, 박경민, 심지현, 이동윤, 이의진, 전강산"
                android:textColor="@color/grey" />
          </LinearLayout>
        </LinearLayout>
      </ScrollView>
    </LinearLayout>

  </LinearLayout>

  <com.google.android.material.navigation.NavigationView
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_gravity="start"
      app:itemIconTint="@color/white"
      app:itemTextColor="@color/black"
      app:menu="@menu/drawer_menu" />
</androidx.drawerlayout.widget.DrawerLayout>