<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:text="동승객"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="영문 성"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/edittext_border"
        android:paddingHorizontal="5dp"
        android:paddingVertical="10dp" />

    <EditText
        android:id="@+id/first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="영문 이름"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/edittext_border"
        android:paddingHorizontal="5dp"
        android:paddingVertical="10dp" />

    <Spinner
        android:id="@+id/passenger_info_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/edittext_border"
        android:paddingHorizontal="5dp"
        android:paddingVertical="10dp" />

    <Spinner
        android:id="@+id/nationality"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/edittext_border"
        android:paddingHorizontal="5dp"
        android:paddingVertical="10dp" />


        <EditText
            android:id="@+id/et_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/edittext_border"
            android:clickable="true"
            android:focusable="false"
            android:hint="생년 월 일"
            android:inputType="none"
            android:paddingHorizontal="5dp"
            android:paddingVertical="10dp" />

        <Button
            android:id="@+id/btn_birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="#118cff"
            android:text="생년월일 선택"
            android:textStyle="bold" />


    <EditText
        android:id="@+id/passport_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="여권 번호"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/edittext_border"
        android:paddingHorizontal="5dp"
        android:paddingVertical="10dp" />

    <EditText
        android:id="@+id/passenger_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="전화 번호"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/edittext_border"
        android:paddingHorizontal="5dp"
        android:paddingVertical="10dp" />

    <EditText
        android:id="@+id/passenger_baggage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="수화물 무게"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/edittext_border"
        android:paddingHorizontal="5dp"
        android:paddingVertical="10dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#868686"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"/>
</LinearLayout>
