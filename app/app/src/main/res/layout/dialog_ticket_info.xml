<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".sidebar.Pop_upActivity"
    android:paddingBottom="16dp">
    <!--  상단 제목 및 닫기 버튼  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shapetop"
        android:gravity="center"
        android:paddingVertical="10dp">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="8"
            android:text="상세보기"
            android:layout_marginStart="22dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center" />

        <ImageButton
            android:id="@+id/closeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:contentDescription="닫기 버튼"
            android:src="@drawable/x" />
    </LinearLayout>
    <!-- 상세정보 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <!--  예약번호  -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="예약 상세 정보"
            android:textSize="16sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="10dp"
            android:background="#DDDDDD" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp">
            <!--  캘린더 이미지  -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:src="@drawable/image"
                android:layout_marginHorizontal="5dp" />
            <!--  이미지와 텍스트 사이의 여백 추가  -->
            <!--  출발시간  -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_departure_date"
                android:text="출발일 "
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginHorizontal="5dp" />
        </LinearLayout>
        <!--   출발지 및 출발 시간  &  도착지 및 도착 시간   -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!--   출발지 및 출발시간, 도착지 및 도착시간 가로 배치   -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_start_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="출발지 및 출발 시간"
                    android:textSize="14sp"
                    android:layout_marginHorizontal="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" ~ "
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_arrival_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="도착지 및 도착 시간"
                    android:textSize="14sp"
                    android:layout_marginHorizontal="10dp" />
            </LinearLayout>
        </LinearLayout>
        <!--  탑승인원  -->
        <TextView
            android:id="@+id/tv_passenger_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="탑승자 : "
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="10dp" />

        <TextView
            android:id="@+id/tv_passport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="여권 번호 : "
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="10dp" />
        <!--  좌석  -->
        <TextView
            android:id="@+id/tv_seat_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="좌석: "
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="10dp" />
        <TextView
            android:id="@+id/tv_flightReno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="예약번호: "
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="10dp" />
        <TextView
            android:id="@+id/tv_flightId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="항공편번호 : "
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="10dp" />
        <!--  수하물  -->
        <TextView
            android:id="@+id/tv_luggage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="수하물: "
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="10dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="10dp"
            android:background="#DDDDDD" />
        <!--  취소 및 환불 규정  -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="* 취소 및 환불규정"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="언제든지 취소 가능"
            android:textColor="#888888"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>